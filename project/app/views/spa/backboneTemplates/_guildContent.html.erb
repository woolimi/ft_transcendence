<script type="text/template" name="tmpl-content-guild">
   <div>
        <h1>All Guilds</h1>
	</div>
    <div>
        <ul>
        <%% _.each(guilds, function(user, i) { %>
		<li class="list-group-item d-flex justify-content-between align-items-center"><%%= guilds[i].name %> <%%= guilds[i].anagram %>
        <%% if(user.guild_id == null){ %>
        <button type="button" class="btn btn-success btn-sm joinGuild">Join Guild</button>
		<%% } %>
        </li>
	<%% }) %>
        </ul>
    </div>
	<br>
	<div class="row">
        <div class="col-md-5">
            <a href="#" class="btn btn-primary btn-lg btn-block btn-huge disabled declareWar">Declare War</a>
        </div>
        <div class="col-md-5">
            <a href="#" class="btn btn-primary btn-lg btn-block btn-huge leave">Leave Guild</a>
        </div>
	</div>
</script>