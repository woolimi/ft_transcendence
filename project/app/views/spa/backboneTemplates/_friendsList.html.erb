<!-- friends -->
<script type="text/template" name="tmpl-friends-list">
<%% _.each(friends, function(friend, i) { %>
	<li class="userInfoModal list-group-item d-flex justify-content-between align-items-center side-list-item cursor" data-user-id="<%%= friend.user_id %>"
		data-toggle="modal" data-target="#userInfoModal">
		<div class="user-status-wrapper">
			<%%= friend.nickname %> (<%%= friend.name %>)
			<%% if (friend.status === 0) { %>
			<span class="user-status offline"></span>			
			<%% } else if (friend.status === 1) { %>
			<span class="user-status online"></span>			
			<%% } else if (friend.status === 2) { %>
			<span class="user-status game"></span>
			<%% } %>
		</div>
		<span class="oi oi-trash removeFriendBtn cursor"
			data-user-id="<%%= friend.user_id %>"
			data-name="<%%= friend.name %>"
			data-nickname="<%%= friend.nickname %>">
		</span>
	</li>
<%% }) %>
</script>